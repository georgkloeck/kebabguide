<% if item.image.attached? %>

  <%= link_to polymorphic_path(item) do %>
    <div class="card-category" style="background-image: url('<%= cl_image_path item.image.key %>'); height: 300px; background-size: cover; background-position: center:"></div>
  <% end %>

<% else %>

  <%= link_to polymorphic_path(item) do %>
    <div class="card-category" style="background-image: url('<%= image_path("hamdi.png") %>'); height: 300px; background-size: cover; background-position: center:"></div>
  <% end %>

<% end %>
