<% if item.image.attached? %>
  <%= link_to_if(controller.action_name == 'index', (cl_image_tag item.image.key, width: 375, height: 200, crop: 'scale'), polymorphic_path(item)) %>
<% else %>
  <%= link_to_if(controller.action_name == 'index', image_tag("hamdi.png", size: "375x250", alt: "Edit Entry"), polymorphic_path(item)) %>
<% end %>
