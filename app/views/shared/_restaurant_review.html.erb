      <% ingredients = Ingredient.all.select { |ingredient| ingredient.kind == category } %>
    <div class="kind-review">
      <div class="kind">

            <div><h3><%= category.capitalize %></h3></div>
          <div class="hint-div">
          <p class="hint-text"> </p>
          </div>
      </div>
          <div class="line"></div>
        <% ingredients.each do |ingredient| %>
          <% @restaurant.subratings.each do |key, value|  %>
            <% if ingredient.id == key %>
            <div class="ingredient-review">
              <div class="ingredient">
                <h4><%= restaurant.ingredients.find(key).name  %></h4>
              </div>
            <div class="score">
              <h4><% value.times do %>‚≠ê<% end %>
              </h4>
            </div>
          </div>
          <% end %>
        <% end %>
      <% end %>

    </div>



