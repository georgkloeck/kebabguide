<%= render partial: 'shared/nav' %>

<%= link_to @restaurant.name, restaurant_path(@restaurant) %>
<% if @review.ingredient_reviews.blank? %>
  <%= "empty reviews".capitalize  %>
<% else %>
  <div>
      <% @review.ingredient_reviews.each do |ingredient_review| %>
      <span><i class="far fa-star"></i></span>
      <p style="color:white;"><%= ingredient_review.ingredient.name  %></p>
      <% stars = ingredient_review.score %>
      <% stars.times do %>
        <i style="color:yellow;" class="far fa-star"></i>
      <% end %>
    <% end %>
  </div>
<% end %>