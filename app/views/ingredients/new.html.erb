<%= render partial: 'shared/nav' %>

<h1> Add your favorite Ingredient here </h1>
<div class='main'>
  <%= form_for @ingredient, html: { multipart: true } do |f| %>
    <div><%= f.text_field :name, placeholder: 'name goes here' %></div>
    </br>
    <div><%= f.text_area :description, placeholder: 'description goes here' %></div>
    <div><%= f.select :kind, Ingredient::KINDS %></div>

    <div><% image_tag(@ingredient.image_url) if @ingredient.image? %></div>
    <div><%= f.file_field :image %></div>
    <div><%# f.hidden_field :image_cache %></div>
    </br>
    <div><%= f.submit "Save Ingredient" %></div>
  <% end %>
</div>
